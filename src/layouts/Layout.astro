---
import "../assets/styles/tailwind.css";
import { SEO } from "astro-seo";
import Navbar from "../components/Navbar.astro";
import FooterSections from "../components/FooterSections.astro";
import Whatsapp from "../components/Whatsapp";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, keywords ,structuredData} = Astro.props;

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="p:domain_verify" content="b9495dd687024edbf3a96a57e6ecf9d6" />
    <meta name="yandex-verification" content="fadb69f77db9eae5" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <GoogleAnalytics />
    {
      structuredData && (
        <script
          type="application/ld+json"
          set:html={JSON.stringify(structuredData)}
        />
      )
    }


    <SEO
      title={title ??
        "Best Hikvision Distributor in Dubai, UAE "}
      description={description ??
        "Hikvision wholesale dealer in Dubai,U.A.E. Get top-tier CCTV systems at competitive rates. Wholesale dealer.wholesale distributor"}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          title:
            title ??
            "Best Hikvision Distributor in Dubai, UAE ",
          type: "Website",
          image: "https://dubai-hikvision.com/logo.svg",
          url: "https://dubai-hikvision.com/",
        },
        optional: {
					description:
						description ??
						"Hikvision wholesale dealer in Dubai,U.A.E. Get top-tier CCTV systems at competitive rates. Wholesale dealer.wholesale distributor",
          
					siteName: "Dubai Hikvision",
					locale: "en_US",
          video: "https://www.youtube.com/embed/MGjX7jfqMZA?si=Dnuo2vATsgzT2JOA"
				},
      }}
      ,
      twitter={{
        card: "summary_large_image",
        creator: "@Dubai Hikvision",
        site: "Dubai Hikvision",
        title:
          title ??
          "Best Hikvision Distributor in Dubai, UAE | Dubai Hikvision",
        image: "https://dubai-hikvision.com/logo.svg",
        imageAlt: "Dubai Hikvision",
        description:
          description ??
          "Dubai Hikvision is an wholesale distributor of Hikvision products in Dubai, UAE.",
      }}
      extend={{
        meta: [
          {
            name: "keywords",
            content:
              "Hikvision wholesale distributor, Dubai, UAE, surveillance, security" +
              keywords,
          },
          { name: "robots", content: "index, follow" },
          { name: "language", content: "English" },
          { name: "Author", content: "Dubai Hikvision" },
         
        ],
      }}
    />
  </head>
  <body class="bg-white">
    <Navbar />
    <div class="mx-auto max-width-8xl px-0 sm:px-0 lg:px-0">
      <main>
        <slot />
      </main>
    </div>
    <Whatsapp client:load />
    <FooterSections />
    <ScrollProgress />
  </body>
</html>
