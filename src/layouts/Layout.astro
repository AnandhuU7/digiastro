---
import "../assets/styles/tailwind.css";
import { SEO } from "astro-seo";
import Navbar from "../components/Navbar.astro";
import FooterSections from "../components/FooterSections.astro";
import Whatsapp from "../components/Whatsapp";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
const { title, description, keywords, structuredData, ogUrl } = Astro.props;
const ogImage = "https://dubai-hikvision.com/logo.svg"; 
const canonicalURL = ogUrl ? new URL(ogUrl, Astro.site) : new URL(Astro.url.pathname, Astro.site);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="p:domain_verify" content="b9495dd687024edbf3a96a57e6ecf9d6" />
    <meta name="yandex-verification" content="fadb69f77db9eae5" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <GoogleAnalytics />
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}

    <SEO
      title={title ?? "Best Hikvision Distributor in Dubai, UAE "}
      description={description ??
        "Hikvision wholesale dealer in Dubai,U.A.E. Get top-tier CCTV systems at competitive rates. Wholesale dealer.wholesale distributor"}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          title: title ?? "Best Hikvision Distributor in Dubai, UAE ",
          type: "website",
          image: ogImage,
          url: canonicalURL.toString(),
        },
        optional: {
          description:
            description ??
            "Hikvision wholesale dealer in Dubai,U.A.E. Get top-tier CCTV systems at competitive rates. Wholesale dealer.wholesale distributor",

          siteName: "Dubai Hikvision",
          locale: "en_US",
          video:
            "https://www.youtube.com/embed/MGjX7jfqMZA?si=Dnuo2vATsgzT2JOA",
        },
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@DubaiHikvision",
        site: "Dubai Hikvision",
        title:
          title ?? "Best Hikvision Distributor in Dubai, UAE | Dubai Hikvision",
        image: "https://dubai-hikvision.com/logo.svg",
        imageAlt: "Dubai Hikvision",
        description:
          description ??
          "Dubai Hikvision is a wholesale distributor of Hikvision products in Dubai, UAE.",
      }}
      extend={{
        meta: [
          {
            name: "keywords",
            content:
              "Hikvision wholesale distributor, Dubai, UAE, surveillance, security" +
              (keywords ?? ""),
          },
          { name: "robots", content: "index, follow" },
          { name: "language", content: "English" },
          { name: "author", content: "Dubai Hikvision" },
        ],
      }}
    />
  </head>
  <body class="bg-white">
    <Navbar />
    <div class="mx-auto max-width-8xl px-0 sm:px-0 lg:px-0">
      <main>
        <slot />
      </main>
    </div>
    <Whatsapp client:load />
    <FooterSections />
    <ScrollProgress />
  </body>
</html>
