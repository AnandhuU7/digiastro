<section class="bg-white py-12 relative overflow-hidden">
	<!-- Notification banner -->  
	<div class="container mx-auto px-4 md:px-6 lg:px-8 mt-5 mb-5">
	  <div class="flex flex-col md:flex-row gap-8 items-center">
		<!-- Text content -->
		<div class="md:w-1/2">
		  <h2 class="text-3xl font-bold text-blue-600 mb-6 leading-tight">
			Empowering Smart Cities with Cutting-Edge Security Solutions.
		  </h2>
		  
		  <p class="text-gray-800 mb-6">
			Hikvision is a world-leading provider of innovative security products and solutions. With a strong focus on research and development, Hikvision delivers advanced technologies in video surveillance, access control, and smart city solutions. Our commitment to quality and innovation ensures that we provide reliable and intelligent security systems tailored to meet the needs of businesses and communities in Dubai and beyond.
		  </p>
		  
		  <a href="#" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-md font-medium transition hover:bg-blue-700">
			Read More â†’
		  </a>
		</div>
		
		<!-- Video section -->
		<div class="md:w-1/2 w-full mt-8 md:mt-0">
		  <div class="relative aspect-video bg-black rounded-lg overflow-hidden shadow-xl">
			<!-- Video thumbnail building image with play button overlay -->
			<div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/building.jpg');">
			  <!-- Fallback image in case background doesn't load -->
			  <img src="/building.jpg" alt="Keltron Building" class="w-full h-full object-cover opacity-0" />
			</div>
			
			<!-- Play button -->
			<button class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-blue-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
			  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
			  </svg>
			</button>
			
			<!-- Video controls bar -->
			<div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white flex items-center p-2">
			  <button class="mr-2">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
				</svg>
			  </button>
			  <span class="text-xs mr-1">0:00 / 0:47</span>
			  
			  <div class="flex-grow mx-2 bg-gray-600 h-1 rounded-full">
				<div class="bg-white h-1 w-0 rounded-full"></div>
			  </div>
			  
			  <button class="mx-1">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 01-1.414-7.072m-2.829 9.9a9 9 0 010-12.728" />
				</svg>
			  </button>
			  <button class="mx-1">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5v-4m0 4h-4m4 0l-5-5" />
				</svg>
			  </button>
			  <button class="ml-1">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
				</svg>
			  </button>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>