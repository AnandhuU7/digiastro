						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-5-5m0 0l-5-5m5 5V8a7 7 0 00-14 0v10a7 7 0 0014 0z" />
						</svg>
					</button>
				</div>
				<div class="grid gap-4 grid-cols-2 sm:grid-cols-2 lg:grid-cols-2">
					<!-- Item 3 -->
					<div class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40">
						<Image src={cam} alt="Cam" class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out" />
						<div class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"></div>
						<h3 class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl transition-opacity duration-300 group-hover:opacity-0">C</h3>
						<button onclick="openModal('modal3')" class="z-10 absolute inset-0 m-auto w-12 h-12 bg-white/50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-5-5m0 0l-5-5m5 5V8a7 7 0 00-14 0v10a7 7 0 0014 0z" />
							</svg>
						</button>
					</div>

					<!-- Item 4 -->
					<div class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40">
						<Image src={cam} alt="Cam" class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out" />
						<div class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"></div>
						<h3 class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl transition-opacity duration-300 group-hover:opacity-0">D</h3>
						<button onclick="openModal('modal4')" class="z-10 absolute inset-0 m-auto w-12 h-12 bg-white/50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-5-5m0 0l-5-5m5 5V8a7 7 0 00-14 0v10a7 7 0 0014 0z" />
							</svg>
						</button>
					</div>
				</div>
			</div>

			<!-- Item 5 -->
			<div class="col-span-2 sm:col-span-1 md:col-span-1 bg-sky-50 h-auto md:h-full flex flex-col">
				<div class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40 flex-grow">
					<Image src={sample} alt="Sample" class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out" />
					<div class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"></div>
					<h3 class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl transition-opacity duration-300 group-hover:opacity-0">E</h3>
					<button onclick="openModal('modal5')" class="z-10 absolute inset-0 m-auto w-12 h-12 bg-white/50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-5-5m0 0l-5-5m5 5V8a7 7 0 00-14 0v10a7 7 0 0014 0z" />
						</svg>
					</button>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Modals -->
<div id="modal1" class="fixed inset-0 z-50 hidden bg-black/50 justify-center items-center">
	<div class="bg-white p-6 rounded-lg w-11/12 max-w-lg">
		<h2 class="text-xl font-bold mb-4">Modal 1</h2>
		<p>This is the content for Modal 1.</p>
		<button onclick="closeModal('modal1')" class="mt-4 px-4 py-2 bg-gray-800 text-white rounded">Close</button>
	</div>
</div>

<div id="modal2" class="fixed inset-0 z-50 hidden bg-black/50 justify-center items-center">
	<div class="bg-white p-6 rounded-lg w-11/12 max-w-lg">
		<h2 class="text-xl font-bold mb-4">Modal 2</h2>
		<p>This is the content for Modal 2.</p>
		<button onclick="closeModal('modal2')" class="mt-4 px-4 py-2 bg-gray-800 text-white rounded">Close</button>
	</div>
</div>

<div id="modal3" class="fixed inset-0 z-50 hidden bg-black/50 justify-center items-center">
	<div class="bg-white p-6 rounded-lg w-11/12 max-w-lg">
		<h2 class="text-xl font-bold mb-4">Modal 3</h2>
		<p>This is the content for Modal 3.</p>
		<button onclick="closeModal('modal3')" class="mt-4 px-4 py-2 bg-gray-800 text-white rounded">Close</button>
	</div>
</div>

<div id="modal4" class="fixed inset-0 z-50 hidden bg-black/50 justify-center items-center">
	<div class="bg-white p-6 rounded-lg w-11/12 max-w-lg">
		<h2 class="text-xl font-bold mb-4">Modal 4</h2>
		<p>This is the content for Modal 4.</p>
		<button onclick="closeModal('modal4')" class="mt-4 px-4 py-2 bg-gray-800 text-white rounded">Close</button>
	</div>
</div>

<div id="modal5" class="fixed inset-0 z-50 hidden bg-black/50 justify-center items-center">
	<div class="bg-white p-6 rounded-lg w-11/12 max-w-lg">
		<h2 class="text-xl font-bold mb-4">Modal 5</h2>
		<p>This is the content for Modal 5.</p>
		<button onclick="closeModal('modal5')" class="mt-4 px-4 py-2 bg-gray-800 text-white rounded">Close</button>
	</div>
</div>

<script>
	function openModal(modalId: string) {
		try {
			const modal = document.getElementById(modalId);
			if (modal) {
				modal.classList.remove('hidden');
			} else {
				throw new Error(`Modal with ID ${modalId} not found.`);
			}
		} catch (error) {
			console.error(error);
		}
	}

	function closeModal(modalId: string) {
		try {
			const modal = document.getElementById(modalId);
			if (modal) {
				modal.classList.add('hidden');
			} else {
				throw new Error(`Modal with ID ${modalId} not found.`);
			}
		} catch (error) {
			console.error(error);
		}
	}
</script>