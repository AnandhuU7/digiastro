---
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

const structuredData =    {
    "@context": "https://schema.org",
    "@type": "VideoObject",
    "name": "Hikvision CCTV Cameras in Dubai",
    "description": "See how Hikvision's new technologies deliver full-color night vision and ultra-low-light surveillance for homes and businesses in Dubai.",
    "thumbnailUrl": "https://img.youtube.com/vi/MGjX7jfqMZA/maxresdefault.jpg",
    "uploadDate": "2024-03-20",
    "duration": "PT1M33S",
    "contentUrl": "https://www.youtube.com/watch?v=MGjX7jfqMZA",
    "embedUrl": "https://www.youtube.com/embed/MGjX7jfqMZA",
    "potentialAction": {
      "@type": "SeekToAction",
      "target": "https://www.youtube.com/watch?v=MGjX7jfqMZA&t={seek_to_second_number}s",
      "startOffset-input": "required name=seek_to_second_number"
    }
  };
---
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<section class="bg-gradient-to-br from-[#f1f7ff] to-[#e6f0ff] pt-16 pb-10 relative overflow-hidden" style="font-family: 'Poppins', sans-serif;">
    <div class="container mx-auto px-4 md:px-6 lg:px-8 py-8">
        <div class="flex flex-col lg:flex-row gap-12 items-center">
            <!-- Text content -->
            <div class="lg:w-1/2 animate-fade-in-left">
                <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-[#32869f] to-[#4fb3d9] bg-clip-text text-transparent mb-6 leading-tight animate-bounce-in" style="font-family: 'Poppins', sans-serif;">
                    Hikvision Dubai - CCTV & IP Camera Distributor in Dubai & UAE
                </h1>
                
                <!-- Full content for extra-large screens (xl and above) -->
                <p class="text-gray-700 text-md leading-relaxed mb-8 animate-fade-in text-justify hidden xl:block" style="font-family: 'Poppins', sans-serif;">
                    Welcome to Hikvision Dubai, your go-to distributor for top-notch surveillance systems and security solutions right here in Dubai. We take pride in offering a wide range of Hikvision products, including CCTV cameras, IP cameras, and the innovative ColorVu technology that guarantees stunningly clear images, even in low-light conditions. Whether you need security for your home, business, or industrial site, our advanced Hikvision camera solutions, featuring the latest WiFi cameras, ensure smooth connectivity and remote monitoring. Our offerings come packed with cutting-edge features like DarkFighter, TandemVu, and AcuSense technologies, providing exceptional performance tailored to various security needs. At Hikvision Dubai, we strive to keep our prices competitive for CCTV cameras across Dubai and the UAE, making high-quality surveillance accessible to everyone. From high-definition video monitoring to smart AI-driven security, we have the ideal Hikvision CCTV camera to suit both home and business requirements!
                </p>    

                <!-- Reduced content for large screens and below -->
                <p class="text-gray-700 text-md leading-relaxed mb-8 animate-fade-in text-justify xl:hidden" style="font-family: 'Poppins', sans-serif;">
                    Welcome to Hikvision Dubai, your trusted distributor for advanced surveillance systems and security solutions. We offer a wide range of Hikvision products, including CCTV cameras, IP cameras, and ColorVu technology for clear images in low light. Our solutions feature DarkFighter, TandemVu, and AcuSense technologies, ensuring top-notch security for homes and businesses. Explore our competitive pricing and high-quality surveillance systems today!
                </p>

                <a href="/contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-[#32869f] to-[#4fb3d9] text-white px-6 py-3 rounded-full font-medium transition-all hover:shadow-xl hover:bg-opacity-90 group">
                    <span class="text-sm">Get Free CCTV Quote</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
            
            <!-- Video Section (SEO-Optimized Embed) -->
            <div class="lg:w-1/2 w-full animate-fade-in-right">
                <div class="relative aspect-video rounded-xl overflow-hidden shadow-2xl">
                    <iframe 
                        class="absolute inset-0 w-full h-full"
                        src="https://www.youtube.com/embed/MGjX7jfqMZA?rel=0&enablejsapi=1"
                        title="Hikvision CCTV Cameras in Dubai - ColorVu & DarkFighter Demo"
                        loading="lazy"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    @keyframes fadeInLeft {
        0% { 
            opacity: 0; 
            transform: translateX(-30px);
        }
        100% { 
            opacity: 1; 
            transform: translateX(0);
        }
    }

    @keyframes fadeInRight {
        0% { 
            opacity: 0; 
            transform: translateX(30px);
        }
        100% { 
            opacity: 1; 
            transform: translateX(0);
        }
    }

    @keyframes bounceIn {
        0% { 
            opacity: 0; 
            transform: scale(0.7);
        }
        50% { 
            opacity: 1; 
            transform: scale(1.03);
        }
        70% { 
            transform: scale(0.97);
        }
        100% { 
            transform: scale(1);
        }
    }

    .animate-fade-in {
        animation: fadeIn 1.2s ease-out;
    }

    .animate-fade-in-left {
        animation: fadeInLeft 1.2s ease-out;
    }

    .animate-fade-in-right {
        animation: fadeInRight 1.2s ease-out;
    }

    .animate-bounce-in {
        animation: bounceIn 1.2s ease-out;
    }
</style>