---
import Layout from '../../layouts/Layout.astro';
import aboutus from "../../assets/images/hikvision.jpg";

// SEO metadata
const title = "About Us | Dubai Hikvision";
const description = "Founded in 2015, we're a company committed to innovation, quality, and customer satisfaction, creating technology that genuinely improves people's lives with global reach.";
const canonicalURL = new URL('/aboutus', Astro.site).toString();

// JSON-LD Schema for better SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About Us - Hikvision Dubai",
  "description": "Hikvision Dubai is a leading provider of security and surveillance solutions, offering high-quality CCTV cameras, NVRs, DVRs, and advanced security systems in the UAE.",
  "url": "https://dubai-hikvision.com/about-us",
  "mainEntity": {
    "@type": "Organization",
    "name": "Hikvision Dubai",
    "description": "Hikvision Dubai provides top-tier security surveillance solutions, including high-end security cameras, access control systems, and AI-driven monitoring solutions.",
    "url": "https://dubai-hikvision.com",
    "logo": {
      "@type": "ImageObject",
      "url": "https://dubai-hikvision.com/logo.png"
    },
    "sameAs": [
      "https://www.facebook.com/hikvisiondubai",
      "https://www.linkedin.com/company/hikvisiondubai",
      "https://www.instagram.com/hikvisiondubai"
    ],
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Satellite Market Naif Deira, Baghlaf Building Showroom No.5",
      "addressLocality": "Dubai",
      "addressRegion": "Dubai, United Arab Emirates",
      "postalCode": "123421",
      "addressCountry": "AE"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+971-4-567-8900",
      "contactType": "customer service",
      "email": "support@dubai-hikvision.com"
    }
  },
  "foundingDate": "2005",
  "founders": [
    {
      "@type": "Person",
      "name": "John Doe"
    }
  ],
  "publisher": {
    "@type": "Organization",
    "name": "Hikvision Dubai",
    "logo": {
      "@type": "ImageObject",
      "url": "https://dubai-hikvision.com/logo.png"
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://dubai-hikvision.com",
          "name": "Home"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://dubai-hikvision.com/about-us",
          "name": "About Us"
        }
      }
    ]
  }
};

---

<Layout 
  title={title}
  description={description}
  canonicalURL={canonicalURL}
  structuredData={structuredData}
>
  <!-- Schema.org JSON-LD -->

  <!-- Hero Section -->
  <!-- Hero Section with enhanced visual elements -->
<section class="relative py-14 overflow-hidden">
  <!-- Gradient background with improved colors -->
  <div class="absolute inset-0 bg-gradient-to-r from-[#3a7d8c] to-[#2c5f6b] z-0"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full transform translate-x-1/3 -translate-y-1/3"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full transform -translate-x-1/4 translate-y-1/4"></div>
  <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-white opacity-5 rounded-full"></div>
  
  <!-- Subtle pattern overlay -->
  <div class="absolute inset-0 bg-[url('/api/placeholder/400/320')] opacity-5 z-1"></div>
  
  <div class="max-w-7xl mx-auto px-5 relative z-10">
    <div class="text-center">
      <!-- Enhanced heading with animation classes -->
      <h1 class="text-6xl font-bold mb-6 text-white">
        About <span class="relative inline-block">
          <span class="relative z-10">Us</span>
          <span class="absolute bottom-0 left-0 w-full h-3 bg-[#4cb8e4] opacity-50 rounded"></span>
        </span>
      </h1>
      
      <!-- Improved subheading with better typography -->
      <p class="text-2xl max-w-3xl mx-auto text-white/90 font-light leading-relaxed">
        We're on a mission to create innovative solutions that make a difference.
      </p>
      
      <!-- Optional decorative separator -->
      <div class="flex justify-center mt-8">
        <div class="w-24 h-1 bg-white opacity-30 rounded"></div>
      </div>
      
      <!-- Optional CTA button -->
      <a href="#our-story" class="inline-flex items-center gap-2 mt-10 px-8 py-3 bg-white/10 hover:bg-white/20 text-white border border-white/30 rounded-full transition duration-300 backdrop-blur-sm">
        Discover Our Story
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 5v14M19 12l-7 7-7-7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

  <!-- Enhanced Our Story Section with ID added for button functionality -->
  <section id="our-story" class="py-14 relative overflow-hidden">
    <!-- Background accent -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-[#4c95ab] opacity-5 rounded-full -mr-32 -mt-32"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#3a7d8c] opacity-5 rounded-full -ml-48 -mb-48"></div>
    <div class="max-w-7xl mx-auto px-5 relative z-10">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="order-2 md:order-1">
          <h3 class="text-3xl font-bold mb-8 text-[#3a7d8c]">A Vision Takes Flight</h3>
          
          <div class="space-y-6">
            <p class="leading-relaxed text-lg">
              <span class="font-semibold text-[#4c95ab]">2015</span> marked the birth of a dream â€” to revolutionize security technology in the UAE and beyond. What began as a passionate team of four visionaries in a modest office in Dubai has blossomed into one of the region's most trusted names in security solutions.
            </p>
            
            <p class="leading-relaxed text-lg">
              Our founder's unwavering belief that <span class="italic">"security should empower, not restrict"</span> continues to guide our every innovation. Through economic fluctuations and technological revolutions, we've remained steadfast in our commitment to excellence.
            </p>
            
            <p class="leading-relaxed text-lg">
              Each milestone in our journey represents countless hours of research, development, and genuine customer collaboration. We've expanded from serving local businesses to partnering with international enterprises across five continents, protecting what matters most to thousands of clients.
            </p>
            
            <div class="mt-10 border-l-4 border-[#4c95ab] pl-6 py-2 italic text-gray-700">
              "Our success isn't measured in installations or profits, but in the peace of mind we provide to every client, every day."
            </div>
          </div>
          
        </div>
        
        <div class="order-1 md:order-2">
          <div class="relative">
            <!-- Main image with enhanced styling -->
            <div class="rounded-2xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:shadow-3xl hover:-translate-y-2 relative z-10">
              <img src={aboutus.src} alt="Dubai Hikvision Team" class="w-full h-auto block" />
            </div>
            
            <!-- Decorative elements -->
            <div class="absolute top-6 -right-6 w-32 h-32 border-4 border-[#4c95ab] rounded-xl opacity-20 z-0"></div>
            <div class="absolute -bottom-6 -left-6 w-32 h-32 border-4 border-[#3a7d8c] rounded-xl opacity-20 z-0"></div>
            
            <!-- Stats highlight -->
            <div class="absolute -bottom-10 right-10 bg-white py-4 px-6 rounded-lg shadow-xl z-20">
              <p class="text-sm text-gray-600">Trusted by</p>
              <p class="text-3xl font-bold text-[#3a7d8c]">5,000+</p>
              <p class="text-sm text-gray-600">clients worldwide</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-7xl mx-auto px-5">
      <h2 class="text-4xl font-bold mb-12 text-center">Our Values</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        
        <div class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]">
          <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-pink-400 to-red-500 rounded-full text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Innovation</h3>
          <p class="leading-relaxed">We constantly push boundaries and explore new ideas to stay ahead of the curve.</p>
        </div>
        
        <div class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]">
          <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Collaboration</h3>
          <p class="leading-relaxed">We believe great things happen when passionate people work together toward a common goal.</p>
        </div>
        
        <div class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]">
          <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-green-400 to-teal-500 rounded-full text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Sustainability</h3>
          <p class="leading-relaxed">We're committed to practices that ensure a better future for our planet.</p>
        </div>
        
        <div class="bg-white rounded-xl p-8 text-center shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-500 border-b-4 border-[#4c95ab]">
          <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Excellence</h3>
          <p class="leading-relaxed">We strive for excellence in everything we do, from product development to customer service.</p>
        </div>
        
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#4c95ab] to-[#3a7d8c] text-white text-center">
    <div class="max-w-7xl mx-auto px-5">
      <h2 class="text-4xl font-bold mb-4">Want to Learn More?</h2>
      <p class="text-xl mb-8">We'd love to hear from you and discuss how we can help with your project.</p>
      <a href="/contact" class="inline-block bg-white text-[#4c95ab] font-semibold py-4 px-8 rounded-full mt-4 hover:-translate-y-1 hover:shadow-lg transition-all duration-300">Get In Touch</a>
    </div>
  </section>
</Layout>