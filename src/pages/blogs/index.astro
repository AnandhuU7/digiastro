---
import Layout from "../../layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const category = "blogs";
const blogs = (await getCollection(category))
  .sort((a, b) => a.data.id - b.data.id)
  .slice(0, 4); 

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Our Blogs",
  "description": "Welcome to our blog section, where knowledge meets inspiration. Explore insightful articles, expert tips, and the latest trends in our field.",
  "url": "https://dubai-hikvision.com/blogs",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": blogs.map((blog, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "BlogPosting",
        "headline": blog.data.title,
        "description": blog.data.description,
        "image": blog.data.cardImage.src,
      }
    }))
  },
  "publisher": {
    "@type": "Organization",
    "name": "Dubai Hikvision",
    "logo": {
      "@type": "ImageObject",
      "url": "https://dubai-hikvision.com/logo.svg"
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "@id": "https://dubai-hikvision.com/#breadcrumb",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://dubai-hikvision.com",
          "name": "Home"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://dubai-hikvision.com/blogs",
          "name": "Blogs"
        }
      }
    ]
  },
};
---

<link rel="stylesheet" href="https://unpkg.com/swiper@11/swiper-bundle.min.css" media="print" onload="this.media='all'" />

<script src="https://unpkg.com/swiper@11/swiper-bundle.min.js" defer></script>

<Layout
  title="Our Blogs"
  description="Welcome to our blog section, where knowledge meets inspiration. Explore insightful articles, expert tips, and the latest trends in our field."
  canonicalURL="https://dubai-hikvision.com/blogs"
  structuredData={structuredData}
>
<section class="relative py-14 overflow-hidden">

  <div class="absolute inset-0 bg-gradient-to-br from-[#32869f] to-[#1d5566] z-0"></div>
  
  <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full transform translate-x-1/3 -translate-y-1/3"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full transform -translate-x-1/4 translate-y-1/4"></div>
  <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-white opacity-5 rounded-full"></div>
  
 
  <div class="absolute top-10 left-10 w-16 h-16 border-t-2 border-l-2 border-white opacity-20"></div>
  <div class="absolute bottom-10 right-10 w-16 h-16 border-b-2 border-r-2 border-white opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-5 relative z-10">
    <div class="text-center">
      <!-- Badge -->    
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">
        Our <span class="relative inline-block">
          <span class="relative z-10">Blogs</span>
          <span class="absolute bottom-0 left-0 w-full h-3 bg-[#f0cb35] opacity-70 rounded"></span>
          <span class="absolute bottom-0 left-0 w-full h-1 bg-[#f0cb35] opacity-30 blur-sm"></span>
        </span>
      </h1>
      
      
      <p class="text-2xl max-w-3xl mx-auto text-white/90 font-light leading-relaxed">
        We're on a mission to create innovative solutions that make a difference.
      </p>
      
      
      <div class="flex justify-center mt-8">
        <div class="w-24 h-1 bg-white opacity-30 rounded-full"></div>
      </div>
      
      
      <a href="#blog" class="inline-flex items-center gap-2 mt-10 px-8 py-3 bg-white/10 hover:bg-white/20 text-white border border-white/30 rounded-full transition duration-300 backdrop-blur-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1">
        Read Latest
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 5v14M19 12l-7 7-7-7"></path>
        </svg>
      </a>
    </div>
  </div>
  
  
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-0">
    <svg class="relative block w-full h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.92,146.86,136.44,221.91,119.3,302.86,101.1,272,68,321.39,56.44Z" fill="#ffffff" fill-opacity="0.1"></path>
    </svg>
  </div>
</section>
  <section class="py-8" >
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8"id="blog">
      <div class="flex justify-center flex-wrap md:flex-wrap lg:flex-nowrap lg:flex-row lg:justify-between gap-8">
        <div class="w-full flex justify-between flex-col lg:w-2/5">
          <div class="block lg:text-left text-center" >
            <h2 class="text-4xl font-bold text-gray-900 leading-[3.25rem] mb-5">Our latest <span class="text-[#32869f]">blogs</span></h2>
            <p class="text-gray-500 mb-10 max-lg:max-w-xl max-lg:mx-auto">Welcome to our blog section, where knowledge meets inspiration. Explore insightful articles, expert tips, and the latest trends in our field.</p>
            <a href="#" class="cursor-pointer border border-gray-300 shadow-sm rounded-full py-3.5 px-7 w-52 lg:mx-0 mx-auto flex justify-center text-gray-900 font-semibold transition-all duration-300 hover:bg-gray-100">View All</a>
          </div>
          <!-- Slider controls -->
          <div class="flex items-center lg:justify-start justify-center lg:mt-0 mt-8 gap-8 mb-4">
            <button id="slider-button-left" class="swiper-button-prev group flex justify-center items-center border border-solid border-[#32869f] w-11 h-11 transition-all duration-500 rounded-full hover:bg-[#32869f]" data-carousel-prev>
              <svg class="h-6 w-6 text-[#32869f] group-hover:text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20.9999 12L4.99992 12M9.99992 6L4.70703 11.2929C4.3737 11.6262 4.20703 11.7929 4.20703 12C4.20703 12.2071 4.3737 12.3738 4.70703 12.7071L9.99992 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <button id="slider-button-right" class="swiper-button-next group flex justify-center items-center border border-solid border-[#32869f] w-11 h-11 transition-all duration-500 rounded-full hover:bg-[#32869f]" data-carousel-next>
              <svg class="h-6 w-6 text-[#32869f] group-hover:text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 12L19 12M14 18L19.2929 12.7071C19.6262 12.3738 19.7929 12.2071 19.7929 12C19.7929 11.7929 19.6262 11.6262 19.2929 11.2929L14 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
        </div>

        <div class="w-full lg:w-3/5">
          <!--Slider wrapper-->
          <div class="swiper mySwiper">
            <div class="swiper-wrapper">
              {blogs.map((blog: CollectionEntry<'blogs'>) => (
                <div class="swiper-slide w-full max-lg:max-w-xl lg:w-1/2 group">
                  <div class="flex items-center mb-9">
                    <Image 
                      src={blog.data.cardImage} 
                      alt={blog.data.title} 
                      class="rounded-2xl w-full object-cover"
                      width={600}
                      height={400}
                    />
                  </div>
                  <a href={`/blogs/${blog.slug}`}><h3 class="text-xl text-gray-900 font-medium leading-8 mb-4 group-hover:text-[#32869f]">{blog.data.title}</h3></a>
                  <p class="text-gray-500 leading-6 transition-all duration-500 mb-8 text-justify">
                    {blog.data.intro}
                  </p>
                  <a href={`/blogs/${blog.slug}`} class="cursor-pointer flex items-center gap-2 text-lg text-[#32869f] font-semibold">
                    Read more<svg width="15" height="12" viewBox="0 0 15 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M1.25 6L13.25 6M9.5 10.5L13.4697 6.53033C13.7197 6.28033 13.8447 6.15533 13.8447 6C13.8447 5.84467 13.7197 5.71967 13.4697 5.46967L9.5 1.5" stroke="#32869f" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  .swiper-button-prev:after,
  .swiper-rtl .swiper-button-next:after {
    content: '' !important;
  }

  .swiper-button-next:after,
  .swiper-rtl .swiper-button-prev:after {
    content: '' !important;
  }

  .swiper-button-next svg,
  .swiper-button-prev svg {
    width: 24px !important;
    height: 24px !important;
  }

  .swiper-button-next,
  .swiper-button-prev {
    position: relative !important;
  }

  .swiper-slide.swiper-slide-active {
    --tw-border-opacity: 1 !important;
    border-color: #32869f !important;
  }

  .swiper-slide.swiper-slide-active > .swiper-slide-active\:text-\[\#32869f\] {
    --tw-text-opacity: 1;
    color: #32869f;
  }

  .swiper-slide.swiper-slide-active > .flex .grid .swiper-slide-active\:text-\[\#32869f\] {
    --tw-text-opacity: 1;
    color: #32869f;
  }
  
  .swiper {
    overflow: hidden !important;
    position: relative !important;
    width: 100% !important;
  }
  
  .swiper-wrapper {
    display: flex !important;
    width: 100% !important;
    box-sizing: content-box !important;
  }
  
  .swiper-slide {
    flex: 0 0 auto !important;
    width: 100% !important;
    padding: 16px !important;
    box-sizing: border-box !important;
    transition: transform 300ms ease !important;
  }

  @media (min-width: 768px) {
    .swiper-slide {
      width: 50% !important;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof Swiper !== 'undefined') {
      var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 10,
        loop: true,
        speed: 500,
        navigation: {
          nextEl: "#slider-button-right",
          prevEl: "#slider-button-left",
        },
        breakpoints: {
          0: { slidesPerView: 1 },
          768: { slidesPerView: 2 },
          1024: { slidesPerView: 2 }
        }
      });
    }
  });
</script>