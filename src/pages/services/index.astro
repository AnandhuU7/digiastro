---
import Layout from '../../layouts/Layout.astro';

// Sample service data - replace with your actual services
const services = [
  {
    icon: 'web',
    title: 'Web Development',
    description: 'Custom websites built with the latest technologies to ensure fast loading, responsive design, and seamless user experience.',
    link: '/services/web-development'
  },
  {
    icon: 'cellphone',
    title: 'Mobile App Development',
    description: 'Native and cross-platform mobile applications that deliver exceptional performance across all devices.',
    link: '/services/mobile-development'
  },
  {
    icon: 'palette',
    title: 'UI/UX Design',
    description: 'User-centered design solutions that create intuitive, engaging, and memorable experiences for your customers.',
    link: '/services/design'
  },
  {
    icon: 'chart-line',
    title: 'Digital Marketing',
    description: 'Result-driven strategies to increase your online visibility, drive traffic, and convert leads into customers.',
    link: '/services/marketing'
  },
  {
    icon: 'cog-outline',
    title: 'IT Consulting',
    description: 'Expert advice and strategic guidance to help your business leverage technology for growth and innovation.',
    link: '/services/consulting'
  },
  {
    icon: 'security',
    title: 'Cybersecurity',
    description: 'Comprehensive security solutions to protect your digital assets from threats and vulnerabilities.',
    link: '/services/security'
  }
];
---
<Layout title="Our Services | Your Company Name">
  <section class="relative py-14 overflow-hidden">
    <!-- Gradient background with improved colors -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#32869f] to-[#1d5566] z-0"></div>
    
    <!-- Static background elements (no animations) -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full transform translate-x-1/3 -translate-y-1/3"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full transform -translate-x-1/4 translate-y-1/4"></div>
    <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-white opacity-5 rounded-full"></div>
    
    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 bg-[url('/api/placeholder/400/320')] opacity-5 z-1 mix-blend-overlay"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-10 left-10 w-16 h-16 border-t-2 border-l-2 border-white opacity-20"></div>
    <div class="absolute bottom-10 right-10 w-16 h-16 border-b-2 border-r-2 border-white opacity-20"></div>
    
    <div class="max-w-7xl mx-auto px-5 relative z-10">
      <div class="text-center">
        <!-- Badge -->    
        <h1 class="text-6xl font-bold mb-6 text-white">
          Our <span class="relative inline-block">
            <span class="relative z-10">Services</span>
            <span class="absolute bottom-0 left-0 w-full h-3 bg-[#f0cb35] opacity-70 rounded"></span>
            <span class="absolute bottom-0 left-0 w-full h-1 bg-[#f0cb35] opacity-30 blur-sm"></span>
          </span>
        </h1>
        
        <!-- Improved subheading with better typography -->
        <p class="text-2xl max-w-3xl mx-auto text-white/90 font-light leading-relaxed">
          We're on a mission to create innovative solutions that make a difference.
        </p>
        
        <!-- Optional decorative separator -->
        <div class="flex justify-center mt-8">
          <div class="w-24 h-1 bg-white opacity-30 rounded-full"></div>
        </div>
        
        <!-- Optional CTA button -->
        <a href="#our-story" class="inline-flex items-center gap-2 mt-10 px-8 py-3 bg-white/10 hover:bg-white/20 text-white border border-white/30 rounded-full transition duration-300 backdrop-blur-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          Read Latest
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 5v14M19 12l-7 7-7-7"></path>
          </svg>
        </a>
      </div>
    </div>
    
    <!-- Decorative wave at bottom -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-0">
      <svg class="relative block w-full h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.92,146.86,136.44,221.91,119.3,302.86,101.1,272,68,321.39,56.44Z" fill="#ffffff" fill-opacity="0.1"></path>
      </svg>
    </div>
  </section>
    <!-- Services Section -->
    <section class="py-20 px-4 bg-[#f0f7fa]">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map(service => (
            <div class="bg-white rounded-lg p-8 shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl relative overflow-hidden group h-full flex flex-col">
              <div class="absolute left-0 top-0 w-1 h-full bg-[#32869f] transform scale-y-0 group-hover:scale-y-100 transition-transform duration-300 origin-bottom"></div>
              <div class="text-4xl text-[#32869f] mb-6">
                <!-- Inline SVG Icons -->
                {service.icon === 'web' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                )}
                {service.icon === 'cellphone' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M10.5 18h3v-3h-3v3zM4 22V2h16v20H4zm3-7h10v-1H7v1zm0-3h10v-1H7v1zm0-3h10V8H7v1z"/>
                  </svg>
                )}
                {service.icon === 'palette' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                  </svg>
                )}
                {service.icon === 'chart-line' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M22 22H2V2h2v18h18v2zM5 17l3.5-4.5 2.5 3 5-6.5L19 17H5z"/>
                  </svg>
                )}
                {service.icon === 'cog-outline' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2V7zm0 8h2v2h-2v-2z"/>
                  </svg>
                )}
                {service.icon === 'security' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10">
                    <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 19.87V12H5V6.3l7-3.11 7 3.11V12h-7v8.87z"/>
                  </svg>
                )}
              </div>
              <h3 class="text-2xl font-semibold text-gray-800 mb-4">{service.title}</h3>
              <p class="text-gray-600 mb-6 flex-grow">{service.description}</p>
              <a href={service.link} class="inline-flex items-center text-[#32869f] font-medium transition-all duration-300 hover:text-[#f4a261] group-hover:gap-2">
                Learn more
                <!-- Arrow Right Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 ml-1">
                  <path d="M10 17l5-5-5-5v10z"/>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-[#4c95ab] to-[#3a7d8c] text-white text-center">
      <div class="max-w-7xl mx-auto px-5">
        <h2 class="text-4xl font-bold mb-4">Want to Learn More?</h2>
        <p class="text-xl mb-8">We'd love to hear from you and discuss how we can help with your project.</p>
        <a href="/contact" class="inline-block bg-white text-[#4c95ab] font-semibold py-4 px-8 rounded-full mt-4 hover:-translate-y-1 hover:shadow-lg transition-all duration-300">Get In Touch</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add animations that aren't in default Tailwind */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animation-delay-200 {
    animation-delay: 0.2s;
  }
</style>