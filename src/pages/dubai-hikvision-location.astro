---
import Layout from "../layouts/Layout.astro";
import { seoConfig } from "../config/seo";

const title =
  "Dubai Hikvision Location - Visit Our Showroom in Naif, Dubai | Contact & Directions";
const description =
  "Visit Dubai Hikvision showroom located in Naif, Dubai. Get directions, contact information, business hours for the leading Hikvision distributor in UAE. Expert consultation available.";
const ogUrl = "https://dubai-hikvision.com/dubai-hikvision-location";

const businessSchema = {
  "@context": "https://schema.org",
  "@type": "Store",
  "@id": "https://dubai-hikvision.com/#store",
  name: "Dubai Hikvision Showroom",
  description:
    "Visit our Dubai showroom for hands-on experience with Hikvision security products. Expert consultations and product demonstrations available.",
  url: "https://dubai-hikvision.com/dubai-hikvision-location",
  telephone: "+971-55-292-9644",
  email: "sales@lovosis.com",
  address: {
    "@type": "PostalAddress",
    streetAddress: "25th St, Naif",
    addressLocality: "Dubai",
    addressRegion: "Dubai",
    postalCode: "123421",
    addressCountry: "AE",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 25.2732815,
    longitude: 55.3094023,
  },
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday"],
      opens: "08:00",
      closes: "18:00",
    },
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: "Friday",
      opens: "08:00",
      closes: "17:00",
    },
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: "Saturday",
      opens: "09:00",
      closes: "16:00",
    },
  ],
  paymentAccepted: ["Cash", "Credit Card", "Bank Transfer"],
  currenciesAccepted: ["AED", "USD"],
  hasMap: "https://maps.google.com/?q=25.2732815,55.3094023",
};
---

<Layout
  title={title}
  description={description}
  ogUrl={ogUrl}
  lovosis={businessSchema}
>
  <div class="bg-gray-50 min-h-screen">
    <!-- Hero Section -->
    <section class="bg-blue-900 text-white py-16">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Visit Dubai Hikvision Showroom
        </h1>
        <p class="text-xl mb-8 max-w-3xl">
          Experience our complete range of Hikvision security solutions at our
          Dubai showroom. Located in the heart of Naif, we offer expert
          consultations and product demonstrations.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="tel:+971-4-123-4567"
            class="bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg font-semibold transition-colors"
          >
            üìû Call Now: +971-55-292-9644
          </a>
          <a
            href="https://maps.google.com/?q=25.2732815,55.3094023"
            target="_blank"
            class="bg-red-600 hover:bg-red-700 px-6 py-3 rounded-lg font-semibold transition-colors"
          >
            üìç Get Directions
          </a>
        </div>
      </div>
    </section>

    <!-- Location Details -->
    <section class="py-16">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Business Information -->
          <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-6">
              Store Information
            </h2>

            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="bg-blue-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2">
                    Address
                  </h3>
                  <p class="text-gray-600">
                    25th St, Naif<br />
                    Dubai, United Arab Emirates<br />
                    Near Naif Souq Metro Station
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="bg-green-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2">
                    Contact
                  </h3>
                  <p class="text-gray-600">
                    Phone: <a
                      href="tel:+971-4-123-4567"
                      class="text-blue-600 hover:underline">+971-55-292-9644</a
                    ><br />
                    Email: <a
                      href="mailto:info@dubai-hikvision.com"
                      class="text-blue-600 hover:underline">sales@lovosis.com</a
                    >
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="bg-orange-100 p-3 rounded-lg">
                  <svg
                    class="w-6 h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2">
                    Business Hours
                  </h3>
                  <div class="text-gray-600 space-y-1">
                    <p><strong>Monday - Thursday:</strong> 8:00 AM - 6:00 PM</p>
                    <p><strong>Friday:</strong> 8:00 AM - 5:00 PM</p>
                    <p><strong>Saturday:</strong> 9:00 AM - 4:00 PM</p>
                    <p><strong>Sunday:</strong> Closed</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Services Offered -->
          <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-6">What We Offer</h2>

            <div class="grid gap-4">
              {
                seoConfig.services.map((service) => (
                  <div class="flex items-center space-x-3 p-4 bg-white rounded-lg shadow-sm border">
                    <div class="bg-blue-500 w-2 h-2 rounded-full" />
                    <span class="text-gray-700 font-medium">{service}</span>
                  </div>
                ))
              }
            </div>

            <div class="mt-8 p-6 bg-blue-50 rounded-lg">
              <h3 class="text-xl font-bold text-blue-900 mb-3">
                Why Choose Dubai Hikvision?
              </h3>
              <ul class="space-y-2 text-blue-800">
                <li>‚úì Authorized Hikvision Distributor</li>
                <li>‚úì Expert Technical Support</li>
                <li>‚úì Professional Installation Team</li>
                <li>‚úì Competitive Wholesale Prices</li>
                <li>‚úì Comprehensive Product Range</li>
                <li>‚úì Local UAE Presence Since 2010</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Directions Section -->
    <section class="bg-white py-16">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          How to Reach Us
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <div
              class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2v0a2 2 0 01-2-2v-2a2 2 0 00-2-2H8z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">By Metro</h3>
            <p class="text-gray-600">
              Take Dubai Metro to Naif Station (Green Line). Our showroom is a
              5-minute walk from the station.
            </p>
          </div>

          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <div
              class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">By Car</h3>
            <p class="text-gray-600">
              Located on 25th Street in Naif. Parking available nearby. Use GPS
              coordinates: 25.2732815,55.3094023
            </p>
          </div>

          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <div
              class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-yellow-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Landmarks</h3>
            <p class="text-gray-600">
              Near Naif Souq, close to Gold Souq and Spice Souq. Walking
              distance from Dubai Creek.
            </p>
          </div>
        </div>

        <div class="mt-12 text-center">
          <a
            href="https://maps.google.com/?q=25.2732815,55.3094023"
            target="_blank"
            class="inline-flex items-center bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
            </svg>
            Open in Google Maps
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
