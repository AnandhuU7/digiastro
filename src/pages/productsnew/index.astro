<script>
  // Add intersection observer for scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const animatedElements = [
      ...document.querySelectorAll('.rounded-lg'),
      ...document.querySelectorAll('.bg-white.p-6')
    ];
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-up');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    animatedElements.forEach(element => {
      observer.observe(element);
    });
    
    // Add hover effect for cards
    const cards = document.querySelectorAll('.rounded-lg');
    cards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        (card as HTMLElement).style.transform = 'translateY(-10px) scale(1.03)';
        (card as HTMLElement).style.boxShadow = '0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)';
      });
      
      card.addEventListener('mouseleave', () => {
        (card as HTMLElement).style.transform = '';
        (card as HTMLElement).style.boxShadow = '';
      });
    });

    // Smooth scroll for Explore Products button
    const exploreButton = document.querySelector('a[href="#products"]');
    if (exploreButton) {
      // Fix potential z-index issues
      (exploreButton as HTMLElement).style.position = 'relative';
      (exploreButton as HTMLElement).style.zIndex = '50';
      
      // Use mouseover instead of mouseenter (more sensitive)
      exploreButton.addEventListener('mouseover', (event) => {
        event.stopPropagation();
        (exploreButton as HTMLElement).classList.add('bg-teal-200');
        (exploreButton as HTMLElement).style.transform = 'translateY(-4px)';
        (exploreButton as HTMLElement).style.boxShadow = '0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)';
      });
      
      // Use mouseout to pair with mouseover
      exploreButton.addEventListener('mouseout', (event) => {
        event.stopPropagation();
        (exploreButton as HTMLElement).classList.remove('bg-teal-200');
        (exploreButton as HTMLElement).style.transform = '';
        (exploreButton as HTMLElement).style.boxShadow = '';
      });
      
      exploreButton.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector('#products');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }
  });
</script>