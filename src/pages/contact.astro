---
import Layout from "../layouts/Layout.astro";
import MapContainer from "../components/GoogleMap.tsx";

const title = `Trusted Hikvision Distributor in Dubai|Wholesale Hikvision dealer in Dubai`;
const description = `Trusted Hikvision distributor in Dubai, UAE. Offering genuine products and expert guidance for all your surveillance needs. Contact us for solutions.`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Dubai Hikvision - Contact Us",
  "description": "Get in touch with Hikvision Dubai for sales, support, and inquiries. Visit our showroom or contact us via phone, email, or WhatsApp.",
  "url": "https://dubai-hikvision.com/contact",
  "mainEntity": {
    "@type": "Organization",
    "name": "Dubai Hikvision",
    "title": "Contact us for more information hikvision dubai,uae",
    "logo": "https://dubai-hikvision.com/logo.svg", 
    "contactPoint": [
      {
        "@type": "ContactPoint",
        "contactType": "Sales",
        "telephone": "+971 55 292 9644",
        "email": "sales@lovosis.com",
        "availableLanguage": ["English", "Arabic"]
      }
    ],
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Satellite Market Naif Deira, Baghlaf Building Showroom No.5",
      "addressLocality": "Dubai",
      "addressCountry": "AE",
      "addressRegion": "Dubai, United Arab Emirates",
      "postalCode": "123421"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "25.276987",
      "longitude": "55.296249"
    },
    "openingHours": "Mo-Su 09:00-20:00"
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://dubai-hikvision.com",
          "name": "Home"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://dubai-hikvision.com/contact",
          "name": "Contact"
        }
      }
    ]
  },
  "faq": {
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "What are your business hours?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Our showroom is open 7 days a week from 9:00 AM to 8:00 PM."
        }
      },
      {
        "@type": "Question",
        "name": "Do you offer installation services?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, we provide professional installation services for all Hikvision products we sell. Our technicians are certified and experienced."
        }
      },
      {
        "@type": "Question",
        "name": "What payment methods do you accept?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "We accept cash, credit/debit cards, bank transfers, and online payments. For large orders, we can also arrange flexible payment terms."
        }
      },
      {
        "@type": "Question",
        "name": "Do you provide after-sales support?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, we offer comprehensive after-sales support including technical assistance, warranty claims, and maintenance services."
        }
      }
    ]
  }
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <!-- Hero Section with enhanced glassmorphism and #32869f color scheme -->
  <section class="relative bg-gradient-to-br from-[#32869f] to-[#1d5566] pb-28 pt-10 overflow-hidden">
    <!-- Static background elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full transform translate-x-1/3 -translate-y-1/3"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-white opacity-5 rounded-full transform -translate-x-1/4 translate-y-1/4"></div>
    <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-white opacity-5 rounded-full"></div>
    
    <div class="absolute top-10 left-10 w-16 h-16 border-t-2 border-l-2 border-white opacity-20"></div>
    <div class="absolute bottom-10 right-10 w-16 h-16 border-b-2 border-r-2 border-white opacity-20"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center">
        <span class="inline-block px-6 py-2 bg-white/10 text-white rounded-full text-sm font-medium mb-6 backdrop-blur-sm border border-white/30 shadow-lg shadow-[#32869f]/20">
          Let's Connect
        </span>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-8 tracking-tight">
          Let's Build Something 
          <span class="relative inline-block">
            <span class="relative z-10">Extraordinary</span>
            <span class="absolute bottom-0 left-0 w-full h-3 bg-[#f0cb35] opacity-70 rounded"></span>
            <span class="absolute bottom-0 left-0 w-full h-1 bg-[#f0cb35] opacity-30 blur-sm"></span>
          </span>
        </h1>
        
        <p class="text-white/90 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed pb-6">
          Transform your security infrastructure with cutting-edge solutions. Our experts are ready to guide you every step of the way.
        </p>
        
        <div class="flex justify-center mt-8">
          <div class="w-24 h-1 bg-white opacity-30 rounded-full"></div>
        </div>
        
        <!-- CTA buttons -->
      </div>
    </div>
    
    <!-- Decorative wave at bottom -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-0">
      <svg class="relative block w-full h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.92,146.86,136.44,221.91,119.3,302.86,101.1,272,68,321.39,56.44Z" fill="#ffffff" fill-opacity="0.1"></path>
      </svg>
    </div>
  </section>
  
  <!-- Contact Info Cards with enhanced design -->
  <section class="py-12 bg-white relative -mt-24">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Enhanced Email Card -->
        <div class="group relative transform transition-all duration-500 hover:-translate-y-2">
          <div class="absolute -inset-1 bg-gradient-to-r from-[#32869f] to-[#38a1c0] rounded-2xl blur-xl opacity-25 group-hover:opacity-75 transition duration-500 animate-tilt"></div>
          <div class="relative bg-white rounded-xl p-8 shadow-lg backdrop-blur-xl border border-slate-200/50 hover:border-[#32869f]/50 transition-all duration-500">
            <div class="flex items-center gap-6">
              <div class="shrink-0">
                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gradient-to-r from-[#32869f] to-[#38a1c0] shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="transform transition-all duration-300 group-hover:translate-x-2">
                <h3 class="text-lg font-semibold text-slate-900">Email Us</h3>
                <a href="mailto:sales@lovosis.com" class="text-[#32869f] hover:text-[#1e5566] font-medium inline-flex items-center gap-2 group">
                  sales@lovosis.com
                  <svg class="w-4 h-4 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
  
        <!-- Phone Card -->
        <div class="relative group transform transition-all duration-300 hover:-translate-y-2">
          <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-500 animate-tilt"></div>
          <div class="relative bg-white rounded-xl p-8">
            <div class="flex items-center gap-6">
              <div class="shrink-0">
                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gradient-to-r from-emerald-500 to-teal-500">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900">Call Us</h3>
                <a href="tel:+971552929644" class="text-emerald-600 hover:text-emerald-700 font-medium">
                  +971 55 292 9644
                </a>
              </div>
            </div>
          </div>
        </div>
  
        <!-- Location Card -->
        <div class="relative group transform transition-all duration-300 hover:-translate-y-2">
          <div class="absolute -inset-1 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-500 animate-tilt"></div>
          <div class="relative bg-white rounded-xl p-8">
            <div class="flex items-center gap-6">
              <div class="shrink-0">
                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gradient-to-r from-purple-500 to-pink-500">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900">Visit Us</h3>
                <p class="text-purple-600 font-medium">
                  25th St - Naif - Dubai - UAE
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Enhanced Contact Form Section -->
  <section class="py-12 bg-gradient-to-b from-slate-50 to-white relative overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-[#32869f]/10 to-[#38a1c0]/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-tr from-[#1e5566]/10 to-[#4bbedf]/10 rounded-full blur-3xl"></div>
  
    <div class="container mx-auto px-4 relative">
      <div class="flex flex-col lg:flex-row gap-12 max-w-7xl mx-auto">
        <!-- Enhanced Contact Form -->
        <div class="lg:w-1/2">
          <div class="bg-white/80 backdrop-blur-xl rounded-2xl shadow-xl p-8 lg:p-12 relative transform transition-all duration-300 hover:shadow-2xl border border-slate-200/50">
            <!-- Attractive Eye-Catching Heading -->
            <div class="text-center mb-6">
              <h2 class="text-2xl font-semibold text-[#32869f] mb-2">Get In Touch</h2>
              <p class="text-slate-600 max-w-lg mx-auto">We're excited to hear from you! Fill out the form below...</p>
              <div class="w-16 h-1 bg-gradient-to-r from-[#32869f] to-[#38a1c0] mx-auto rounded-full mt-2"></div>
            </div>
            
            <!-- Form content with improved styling -->
            <form action="https://api.web3forms.com/submit" method="POST" id="form" class="space-y-6">
              <!-- Hidden input for access_key -->
              <input type="hidden" name="access_key" value="fd71803b-2c58-4589-bee9-6d9a3f5befef">
              
              <!-- Enhanced input fields -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative group">
                  <input
                    type="text"
                    name="firstname"
                    placeholder=" "
                    class="peer w-full px-4 py-3 rounded-lg bg-slate-50/50 border-0 outline-none focus:ring-2 focus:ring-[#32869f] focus:outline-none transition-all duration-200 backdrop-blur-sm"
                    required
                  />
                  <label class="absolute left-4 -top-2.5 bg-white px-2 text-sm text-slate-600 transition-all duration-200 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#32869f]">
                    First Name
                  </label>
                </div>
                
                <div class="relative group">
                  <input
                    type="text"
                    name="lastname"
                    placeholder=" "
                    class="peer w-full px-4 py-3 rounded-lg bg-slate-50 border-0 outline-none focus:ring-2 focus:ring-[#32869f] focus:outline-none"
                    required
                  />
                  <label class="absolute left-4 -top-2.5 bg-white px-2 text-sm text-slate-600 transition-all duration-200 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#32869f]">
                    Last Name
                  </label>
                </div>
              </div>
          
              <div class="relative">
                <input
                  type="email"
                  name="email"
                  placeholder=" "
                  class="peer w-full px-4 py-3 rounded-lg bg-slate-50 border-0 outline-none focus:ring-2 focus:ring-[#32869f] focus:outline-none"
                  required
                />
                <label class="absolute left-4 -top-2.5 bg-white px-2 text-sm text-slate-600 transition-all duration-200 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#32869f]">
                  Email
                </label>
              </div>
          
              <div class="relative">
                <input
                  type="text"
                  name="company"
                  placeholder=" "
                  class="peer w-full px-4 py-3 rounded-lg bg-slate-50 border-0 outline-none focus:ring-2 focus:ring-[#32869f] focus:outline-none"
                  required
                />
                <label class="absolute left-4 -top-2.5 bg-white px-2 text-sm text-slate-600 transition-all duration-200 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#32869f]">
                  Company Name
                </label>
              </div>
          
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 rounded-lg bg-slate-50 border-0 outline-none focus:ring-2 focus:ring-[#32869f] focus:outline-none"
                  required
                ></textarea>
              </div>
          
              <!-- Enhanced submit button -->
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-[#32869f] to-[#38a1c0] text-white font-medium py-4 px-6 rounded-xl transition-all duration-300 transform hover:translate-y-[-2px] hover:shadow-lg hover:from-[#2a7085] hover:to-[#3295b2] focus:ring-2 focus:ring-[#32869f] focus:ring-offset-2 active:scale-[0.98]"
              >
                Send Message
                <svg class="w-5 h-5 inline-block ml-2 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </button>
              <div id="result"></div>
            </form>
          </div>
        </div>
  
        <!-- Enhanced Map Container -->
        <div class="lg:w-1/2">
          <div class="h-[600px] rounded-2xl overflow-hidden shadow-xl relative transform transition-all duration-300 hover:shadow-2xl backdrop-blur-sm border border-slate-200/50">
            <div class="absolute inset-0 bg-gradient-to-r from-[#32869f]/5 to-[#38a1c0]/5"></div>
            <MapContainer
              APIKEY="AIzaSyCieCaQ_bWMpJ46a6l-4Ck_NWVhNtNieAk"
              client:load
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script is:inline>
    const form = document.getElementById('form');
    const result = document.getElementById('result');
    
    form.addEventListener('submit', function(e) {
        const formData = new FormData(form);
        e.preventDefault();
    
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);
    
        result.innerHTML = "Please wait..."
    
        fetch('https://api.web3forms.com/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: json
            })
            .then(async (response) => {
                let json = await response.json();
                if (response.status == 200) {
                    result.innerHTML = json.message;
                } else {
                    console.log(response);
                    result.innerHTML = json.message;
                }
            })
            .catch(error => {
                console.log(error);
                result.innerHTML = "Something went wrong!";
            })
            .then(function() {
                form.reset();
                setTimeout(() => {
                    result.style.display = "none";
                }, 3000);
            });
    });
    </script>
  
  <style>
    .animate-gradient {
      background-size: 200% 200%;
      animation: gradient 8s ease infinite;
    }
  
    .animate-tilt {
      animation: tilt 10s infinite linear;
    }
  
    .animate-float {
      animation: float 20s infinite linear;
    }
  
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  
    @keyframes tilt {
      0% { transform: rotate(0deg); }
      25% { transform: rotate(1deg); }
      75% { transform: rotate(-1deg); }
      100% { transform: rotate(0deg); }
    }
  
    @keyframes float {
      0% { background-position: 0 0; }
      100% { background-position: 100% 100%; }
    }
  </style>
</Layout>