---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import SlugProductDetails from "../../components/SlugProductDetails.astro";

// Fetch all product entries and generate static paths
export async function getStaticPaths() {
  const productEntries = await getCollection("ptzcamera");
  return productEntries.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

// Access the product data passed via props
const { product } = Astro.props;
const breadcrumb = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://dubai-hikvision.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Products",
      "item": "https://dubai-hikvision.com/productsnew"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "PTZ Camera",
      "item": `https://dubai-hikvision.com/ptzcamera`
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": product.data.title,
      "item": `https://dubai-hikvision.com/ptzcamera/${product.slug}`
    }
  ]
};
// Generate structured data for the product
---

<Layout 
  title={product.data.title} 
  description={product.data.subTitle}
>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumb)} />
  <SlugProductDetails product={product} />
</Layout>