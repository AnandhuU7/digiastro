---
import Layout from "../layouts/Layout.astro";
import HeroComponents from "../components/HeroComponents.astro";
import FeatureComponents, { feature } from "../components/FeatureComponents.astro";
import DigiComponents from "../components/DigiComponents.astro";
import FAQ, { faqs } from "../components/FAQ.astro";
import Slider from "../components/Slider.astro";
import { slides, services } from "../components/HeroComponents.astro";
import { sliders } from "../components/Slider.astro";

const title = `Dubai Hikvision - Hikvision Wholesale Distributor`;
const description = `Premier Hikvision distributor in Dubai, UAE. Explore our range of genuine products and benefit from expert support. Contact us for inquiries`;
const ogUrl="https://dubai-hikvision.com"
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      name: title,
      description: description,
      url: ogUrl,
      publisher: {
        "@type": "Organization",
        name: "Dubai Hikvision",
        url: "https://dubai-hikvision.com",
      },
      breadcrumb: {
        "@type": "BreadcrumbList",
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: "https://dubai-hikvision.com",
          },
        ],
      },
    },
    {
      "@type": "ItemList",
      name: "Promotional Banners",
      description:
        "Explore our promotional banners showcasing Hikvision technologies.",
      itemListElement: slides.map((slide, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
          "@type": "ImageObject",
          name: slide.title,
          description: `Promotional banner for ${slide.title}`,
          contentUrl: "https://dubai-hikvision.com" + slide.imgMain.src,
          thumbnail: "https://dubai-hikvision.com" + slide.imgMobile.src,
          creditText: "Dubai Hikvision",
          width: "1920",
          height: "1080",
        },
      })),
    },
    {
      "@type": "ItemList",
      name: "Hikvision Technologies",
      description:
        "Discover advanced Hikvision technologies like DarkFighter, TandemVu, ColorVu, and AcuSense.",
      itemListElement: services.map((service, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
          "@type": "Technology",
          name: service.title,
          description: service.description,
          image: {
            "@type": "ImageObject",
            url: service.icon.src,
            width: 300,
            height: 300,
          },
          applicationCategory: "SecurityTechnology",
          feature: [
            {
              "@type": "PropertyValue",
              name: "DarkFighter Technology",
              description:
                "Hikvision's low-light imaging suite (including DarkFighter 2.0) that enables clear, color images in near darkness.",
            },
            {
              "@type": "PropertyValue",
              name: "TandemVu Technology",
              description:
                "Combines panoramic wide-area coverage with PTZ detail in one camera, enhanced by AcuSense for real-time detection.",
            },
            {
              "@type": "PropertyValue",
              name: "ColorVu Technology",
              description:
                "Captures full-color video in extreme low-light using advanced lenses, sensors, and supplemental lighting.",
            },
            {
              "@type": "PropertyValue",
              name: "AcuSense Technology",
              description:
                "Deep-learning algorithm for accurate human/vehicle detection, minimizing false alarms and enabling efficient incident searches.",
            },
            "4K Ultra HD Resolution",
            "Smart Perimeter Protection",
            "Real-time Video Analytics",
          ],
          brand: {
            "@type": "Brand",
            name: "Hikvision",
            url: "https://www.hikvision.com",
          },
          additionalProperty: [
            {
              "@type": "PropertyValue",
              name: "Technology Type",
              value: "AI-Powered Video Surveillance",
            },
            {
              "@type": "PropertyValue",
              name: "AI Capabilities",
              value: "Deep Learning, Object Classification",
            },
          ],
        },
      })),
    },
    {
      "@type": "ItemList",
      name: "Our Products",
      description: "Explore our range of Hikvision products.",
      itemListElement: sliders.map((slider, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
          "@type": "Product",
          name: slider.data.sliderAlt,
          description: slider.data.description,
          image: {
            "@type": "ImageObject",
            url: "https://dubai-hikvision.com" + slider.data.slider,
            height: 800,
            width: 800,
            caption: slider.data.sliderAlt,
          },
          brand: {
            "@type": "Brand",
            name: "Hikvision",
          },
          aggregateRating:
            slider.data.rating && slider.data.reviewCount
              ? {
                  "@type": "AggregateRating",
                  ratingValue: slider.data.rating.toFixed(1),
                  reviewCount: slider.data.reviewCount,
                  bestRating: 5,
                  worstRating: 1,
                }
              : undefined,
          category: "Security Products",
          offers: {
            "@type": "Offer",
            priceCurrency: "AED",
            price: 50,
            priceValidUntil: "2025-12-31",
            itemCondition: "https://schema.org/NewCondition",
            availability: "https://schema.org/InStock",
            seller: {
              "@type": "Organization",
              name: "Dubai Hikvision",
              url: "https://dubai-hikvision.com",
            },
          },
        },
      })),
    },
    {
      "@type": "VideoObject",
      name: "Hikvision Dubai - CCTV & IP Camera Distributor in Dubai & UAE",
      description: "Welcome to Hikvision Dubai, your go-to distributor for top-notch surveillance systems and security solutions right here in Dubai. We take pride in offering a wide range of Hikvision products, including CCTV cameras, IP cameras, and the innovative ColorVu technology that guarantees stunningly clear images, even in low-light conditions. Whether you need security for your home, business, or industrial site, our advanced Hikvision camera solutions, featuring the latest WiFi cameras, ensure smooth connectivity and remote monitoring. Our offerings come packed with cutting-edge features like DarkFighter, TandemVu, and AcuSense technologies, providing exceptional performance tailored to various security needs. At Hikvision Dubai, we strive to keep our prices competitive for CCTV cameras across Dubai and the UAE, making high-quality surveillance accessible to everyone. From high-definition video monitoring to smart AI-driven security, we have the ideal Hikvision CCTV camera to suit both home and business requirements!",
      thumbnailUrl: "https://img.youtube.com/vi/MGjX7jfqMZA/maxresdefault.jpg",
      uploadDate: "2024-03-20",
      duration: "PT1M33S",
      contentUrl: "https://www.youtube.com/watch?v=MGjX7jfqMZA",
      embedUrl: "https://www.youtube.com/embed/MGjX7jfqMZA",
      potentialAction: {
        "@type": "SeekToAction",
        target:
          "https://www.youtube.com/watch?v=MGjX7jfqMZA&t={seek_to_second_number}s",
        "startOffset-input": "required name=seek_to_second_number",
      },
    },
    {
      "@type": "ItemList",
      name: "Hikvision Security Features",
      description:
        "Explore advanced security features including surveillance, access control, and monitoring solutions",
      itemListElement: feature.map((f, index) => ({
        "@type": "ListItem",
        position: index + 1,
        item: {
          "@type": "PropertyValue",
          name: f.data.name,
          description: f.data.body,
          valueReference: {
            "@type": "Brand",
            name: "Hikvision",
            description: "World leader in video surveillance equipment",
            url: "https://dubai-hikvision.com",
          },
        },
      })),
    },
    {
      "@type": "FAQPage",
      mainEntity: faqs.map((faq) => ({
        "@type": "Question",
        name: faq.heading,
        acceptedAnswer: {
          "@type": "Answer",
          text: faq.content,
        },
      })),
    },
  ],
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<Layout title={title} description={description} ogUrl={ogUrl}>
  <HeroComponents />
  <DigiComponents />
  <Slider />
  <FeatureComponents />
  <FAQ />
</Layout>
